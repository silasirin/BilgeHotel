
@{
    ViewBag.Title = "MyCart";
    Layout = "~/Views/Shared/_Layout.cshtml";



    CartVM sessionCart = Session["scart"] as CartVM; //Unboxing
    decimal? totalPrice = 0;
}

<div class="row">
    <div class="col-md-9">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Oda Tipi</th>
                    <th>Tatil Paketi</th>
                    <th>Kişi Sayısı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in sessionCart.myCart)
                {
                    totalPrice += item.ToplamFiyat;
                    <tr>
                        <td>@item.OdaTuru</td>
                        <td>@item.TatilPaketi</td>
                        <td>@item.ToplamFiyat</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5>Siparis Ozeti</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    @*verileri yan yana yazdirmamizi saglar*@
                    <h5>Genel Toplam: </h5>
                    <h5> @totalPrice TL</h5>
                </div>
                <div class="col-md-12 mt-5">
                    @Html.ActionLink("Rezervasyonu Tamamla", "CompleteCart", "Home", null, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Devam Et", "Index", "Home", null, new { @class = "btn" })
                </div>
            </div>
        </div>
    </div>
</div>