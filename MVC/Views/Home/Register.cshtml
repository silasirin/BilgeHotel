@model UserVM
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Kayıt Ol</h3></div>
                <div class="card-body">
                    <form method="post">
                        <div>
                            <label>Ad:</label>
                            @Html.ValidationMessageFor(x => x.Ad)
                            <br />
                            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                        </div>
                        <div>
                            <label>Soyad:</label>
                            @Html.ValidationMessageFor(x => x.Soyad)
                            <br />
                            @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
                        </div>
                        <div>
                            <label>TC Kimlik No:</label>
                            @Html.ValidationMessageFor(x => x.TCKN)
                            <br />
                            @Html.TextBoxFor(x => x.TCKN, new { @class = "form-control" })
                        </div>
                        <div>
                            <label>Tel No:</label>
                            @Html.ValidationMessageFor(x => x.TelNo)
                            <br />
                            @Html.TextBoxFor(x => x.TelNo, new { @class = "form-control" })
                        </div>
                        <div>
                            <label>Email:</label>
                            @Html.ValidationMessageFor(x => x.Email)
                            <br />
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                        <div>
                            <label>Şifre:</label>
                            @Html.ValidationMessageFor(x => x.Sifre)
                            <br />
                            @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
                        </div>
                        <div>
                            <label>Şifre Tekrar:</label>
                            @Html.ValidationMessageFor(x => x.SifreTekrar)
                            <br />
                            @Html.TextBoxFor(x => x.SifreTekrar, new { @class = "form-control" })
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary btn-block mt-3">Kayıt Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
